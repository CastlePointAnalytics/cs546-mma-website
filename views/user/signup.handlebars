<div class="row">
    <div class="col-sm-12">
        <form id="login-form" method="POST" action="/signup">
            {{#if error}}
            <h2>Invalid Sign Up Data</h2>
            {{/if}}
            <div class="form-group">
                <label>
                    First Name
                    <input type='text' name='firstName' placeholder="First Name" class="full-width-input">
                </label>
            </div>
            <div class="form-group">
                <label>
                    Last Name
                    <input type='text' name='lastName' placeholder="Last Name" class="full-width-input">
                </label>
            </div>
            <div class="form-group">
                <label>
                    Age
                    <input type='number' name='age' placeholder="Age" class="full-width-input">
                </label>
            </div>
            <div class="form-group">
                <label>
                    Country
                    <input type='text' name='country' placeholder="Country" class="full-width-input">
                </label>
            </div>
            <div class="form-group">
                <label>
                    Username
                    <input type='text' name='username' placeholder="Username" class="full-width-input">
                </label>
            </div>
            <div class="form-group">
                <label>
                    Password
                    <input type='text' name='password' placeholder="Password" class="full-width-input">
                </label>
            </div>
            <button type="submit">Submit</button>

        </form>
    </div>
</div>