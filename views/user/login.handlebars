<div class="row">
    <div class="col-sm-12">
        <form id="login-form" method="POST" action="/login">
            <div class="form-group">
                <label>
                    Username
                    <input type='text' name='username' placeholder="Username" class="full-width-input">
                </label>
            </div>
            <div class="form-group">
                <label>
                    Password
                    <input type='password' name='password' placeholder="Password" class="full-width-input">
                </label>
            </div>
            <button type="submit">Submit</button>
        </form>
        {{#if hasErrors}}
        <ul class="error-list">
            {{#each errors}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
</div>